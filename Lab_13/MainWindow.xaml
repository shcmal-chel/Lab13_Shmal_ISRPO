<Window x:Class="Lab_13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_13"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="myGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" Content ="Title of App" Margin="0,0,0,0" Grid.Row="0"/>
        <Label Grid.Column="1" Content ="Sample Text" Margin="0,0,0,0" Grid.Row="1" Grid.ColumnSpan="3"/>
        <Button Grid.Row="3" Grid.Column="1" Content="A" FontSize="40" FontWeight="Bold" Background="#FF5D1D1D" FontFamily="Algerian" BorderBrush="#FF8C8181" Foreground="#FFFB6262"/>
        <Button Grid.Column="3" Grid.Row="3" Content="B" Click="Button_Click"/>
    </Grid>
</Window>
